---
import hotel from '../assets/images/hotel.jpg'
import news from '../assets/images/digital-devices-news.jpg'
import quiz from '../assets/images/quiz.jpg'

---

<div class="mx-12">
    <h1 class="my-24 text-center text-xl">Projects</h1>
    <div class="grid grid-cols-1 gap-24 xl:mx-48 xl:grid-cols-2">
        <div class="group relative cursor-pointer">
          <img
            class="relative z-10 w-full rounded-lg transition-all group-hover:-translate-x-3"
            src={hotel}
            alt="Hotel project"
          />
          <div
            class="absolute left-0 top-0 h-full w-full rounded-lg  bg-zinc-200 transition-all group-hover:translate-x-4 group-hover:translate-y-4"
          >
          </div>
        </div>
        <div class="group relative cursor-pointer">
          <img
            class="relative z-10 w-full rounded-lg transition-all group-hover:-translate-x-3"
            src={news}
            alt="News market"
          />
          <div
            class="absolute left-0 top-0 h-full w-full rounded-lg bg-zinc-200 transition-all group-hover:translate-x-4 group-hover:translate-y-4"
          >
          </div>
        </div>
        <div class="group relative cursor-pointer">
          <img
            class="relative z-10 w-full rounded-lg transition-all group-hover:-translate-x-3"
            src={quiz}
            alt="Quiz app"
          />
          <div
            class="absolute left-0 top-0 h-full w-full rounded-lg bg-zinc-200 transition-all group-hover:translate-x-4 group-hover:translate-y-4"
          >
          </div>
        </div>
      </div>
    </div>
    